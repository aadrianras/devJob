<main class="contenedor">
    <form action="/vacante/editar/{{vacanteDB.url}}" method="POST" class="default-form">
        <h3>Información general</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React developer" required value="{{vacanteDB.titulo}}">
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Nombre de la empresa contratante"
                value="{{vacanteDB.empresa}}" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej:  La Paz - Bolivia ó Remoto" required
                value="{{vacanteDB.ubicacion}}">
        </div>
        <div class="campo">
            <label for="salario">Salario</label>
            <input type="text" name="salario" placeholder="Ingresa el salario mensual en Bs."
                value="{{vacanteDB.salario}}">
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacanteDB.contrato}}
                <option value="" disabled selected>--Selecciona--</option>
                <option value="Freelancer">Freelancer</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}

            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacanteDB.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacanteDB.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Actualizar" class="btn btn-azul">
        </div>
    </form>
</main>