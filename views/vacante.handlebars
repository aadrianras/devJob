<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre">{{vacante.empresa}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Ubicaci贸n</p>
        <p class="nombre">{{vacante.ubicacion}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre">{{vacante.contrato}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salario</p>
        <p class="nombre">Bs. {{vacante.salario}}</p>
    </div>
</div>
<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripci贸n del puesto</h2>
        <div class="vacante-descripcion">
            {{{vacante.descripcion}}}
        </div>
        <a href="/vacante/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar vacante</a>
    </main>
    <aside class="sidebar">
        <h2>Conocimientos deseados</h2>
        <ul class="skills">
            {{#each vacante.skills}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>
<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar reclutador</h2>
        <p>Llena el siguiente formulario, sube tu CV y pronto te conectaremos</p>
        <form action="/vacante/{{vacante.url}}" method="POST" class="default-form" enctype="multipart/form-data">
            <div class="campo">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" placeholder="Tu nombre">
            </div>
            <div class="campo">
                <label for="email">Correo</label>
                <input type="email" name="email" placeholder="Tu correo electr贸nico">
            </div>
            <div class="campo">
                <label for="CV">CV(PDF)</label>
                <input type="file" name="CV">
            </div>
            <div class="campo">
                <input type="submit" placeholder="Enviar" class="btn btn-verde">
            </div>
        </form>
    </div>
    <div class="info-reclutador">
        <h2>Informaci贸n Reclutador</h2>
        {{#if vacante.autor.nombre}}
        <p>{{vacante.autor.nombre}}</p>
        {{/if}}
        {{#if vacante.autor.imagen}}
        <img src="/uploads/perfiles/{{vacante.autor.imagen}}" alt="Perfil">
        {{/if}}
    </div>
</div>