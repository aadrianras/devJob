<main class="contenedor">
    <form action="/crear-cuenta" method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingresa tu nombre">
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input type="text" name="email" placeholder="Ingresa tu correo">
        </div>
        <div class="campo">
            <label for="password">Contraseña</label>
            <input type="password" name="password" placeholder="Ingresa tu contraseña" id="UsuarioContrasenia">
        </div>
        <div class="campo">
            <label for="passwordRepetido">Repetir contraseña</label>
            <input type="password" name="passwordRepetido" placeholder="Repite tu contraseña"
                id="UsuarioContraseniaRepeticion">
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">Volver a iniciar sesión</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear Cuenta" class="btn btn-rojo" id="btnSubmitRegistro" disabled>
        </div>
    </form>
</main>